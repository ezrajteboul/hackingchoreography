set up ()
{ dancer a = stage right; dancer b = stage left
}


quality()
{
quality1 = soft
quality2 = indirect
quality3 = sudden
quality4 = strong
}


{
dancer a function.switch(quality)
dancer b function.loop(quality1)
}



right.left()
